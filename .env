# MCP Tekla+ 環境配置

# 開發模式
VITE_NODE_ENV=development

# MCP 伺服器配置
VITE_MCP_SERVER_URL=http://localhost:8000
VITE_MCP_WS_URL=ws://localhost:8000/ws

# Tekla API 服務配置
VITE_TEKLA_API_URL=http://localhost:5000/api/tekla

# WebUI 配置
VITE_WEBUI_PORT=5173
VITE_WEBUI_HOST=localhost

# 功能開關
VITE_ENABLE_DEBUG=true
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_TEKLA_INTEGRATION=true
VITE_ENABLE_SYSTEM_MONITORING=true

# AI 配置
VITE_AI_TEMPERATURE=0.7
VITE_AI_MAX_TOKENS=2048
VITE_RAG_ENABLED=true

# 系統監控配置
VITE_MONITORING_INTERVAL=5000
VITE_GPU_MONITORING=true
VITE_PERFORMANCE_TRACKING=true
